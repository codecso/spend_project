<h1>Merchants</h1>

<table>
  <tr>
    <th>Merchant ID</th>
    <th></th>
    <th>Merchant</th>
  </tr>

  <% for merchant in @merchants %>
  <tr>
    <td><%= merchant.id %></td>
    <td></td>
    <td><%= merchant.name %></td>
    <td></td>
    <td>
      <form action="/merchants/<%=merchant.id%>/delete" method="POST">
        <input type="submit" value="delete">
      </form>
    </td>
  </tr>
  <% end %>

</table>
